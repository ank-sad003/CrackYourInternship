class Solution {
    public void setZeroes(int[][] matrix) {
        int m=matrix.length;
        int n=matrix[0].length;
        Queue<Integer> qp=new  LinkedList<Integer>();
        boolean flg=false;
        for(int i=0;i<m;i++)
        {
            flg=false;
            for(int j=0;j<n;j++)
            {
                if(matrix[i][j]==0)
                {
                qp.add(j);
                flg=true;
                }
            }
            if(flg==true)
            {
                for(int j=0;j<n;j++)
                matrix[i][j]=0;
            }
        }
        while(qp.peek()!=null)
        {
            int s=qp.poll();
            for(int i=0;i<m;i++)
            {
                matrix[i][s]=0;
            }
        }    
    }
}
